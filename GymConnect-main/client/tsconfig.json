{
  "compilerOptions": {
    "jsx": "react-jsx", // CRA/Vite; use "preserve" for Next.js
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}